<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/header.ejs') %>

            <h1 class="detail__titulo">
                Agregar Película
            </h1>


            <div class="row g-0" id="add__row">
                <div class="col-md-4">

                    <form class="row g-3" action="/movies/create" method="POST"  enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="title" placeholder="Titulo"
                                aria-label="Username" aria-describedby="basic-addon1">
                        </div>

                        <div class="input-group mb-3">
                            <input type="number" class="form-control" name="rating" placeholder="Rating"
                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                        </div>

                        <div class="input-group mb-3">
                            <input type="number" class="form-control" name="awards" placeholder="Awards"
                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                        </div>

                        <div class="input-group mb-3">
                            <input type="date" class="form-control" name="release_date" placeholder="Estreno"
                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                        </div>

                        <div class="input-group mb-3">
                            <input type="number" class="form-control" name="length" placeholder="Duracion"
                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                        </div>

                        <div class="mb-3">
                            <input class="form-control" type="file" id="formFile" name="image">
                          </div>

                          
                        <select class="form-select" aria-label="Default select example" name="genre_id">
                            <option value="" disabled hidden selected>- Seleccione Genero - </option>
                            <% allGenres.forEach(genre=> { %>
                                <option value="<%= genre.id %>">
                                    <%= genre.name %>
                                </option>
                                <% }); %>
                        </select>

                        <p> <button class="btn btn-success" type="submit">Agregar</button>
                            <button type="button" class="btn btn-primary"><a class="add__butomms" href="/movies">Listado de Películas</a></button>
                        </p>


                    </form>

                </div>
            </div>



            <%- include('./partials/footer.ejs') %>
                <%- include('./partials/scrips.ejs') %>
    </body>

</html>