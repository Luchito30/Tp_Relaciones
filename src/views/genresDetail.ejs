<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <h1 class="detail__titulo"><%= genre.name %> </h1>

    <div class="card mb-3" id="detailcard">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/img/genres/<%= genre.image %>" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8" id="detail__col">
            <div class="card-body">
              <h5 class="card-title" id="detail__cardtitle">GENERO</h5>
              <p class="card-text">
            <ul class="detail__ul">
                <li class="detail_li">NAME: <%= genre.name %></li>
                <li class="detail_li">RANKIG: <%= genre.ranking %> </li>
                <li class="detail_li"> <p>MOVIES:</p>
                    <% genre.movies.forEach(movie => { %>
                     <ul>
                        <li><a class="detail__hiper" href="/movies/detail/<%= movie.id %>"><%= movie.title %></a></li>
                     </ul>
                    <% }) %>
            </ul>
              
            </div>
          </div>
        </div>
      </div>



      
    <p> </p>
    <p></p>
    <p>MOVIES:</p>

    <hr>
    

    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scrips.ejs') %>
</body>
</html>