<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/header.ejs') %>



        <h1 class="detail__titulo">
            <%= movie.title %>
        </h1>

        <div class="card mb-3" id="detailcard">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="/img/Movies/<%= movie.image %>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8" id="detail__col">
                <div class="card-body">
                  <h5 class="card-title" id="detail__cardtitle">Caracteristicas de la Pelicula</h5>
                  <p class="card-text">
                <ul class="detail__ul">
                    <li class="detail_li">RATING: <%= movie.rating %></li>
                    <li class="detail_li">PREMIOS: <%= movie.awards %></li>
                    <li class="detail_li">DURACION: <%= movie.length + ' min' %></li>
                    <li class="detail_li">ESTRENO: <%= movie.release_date %></li>
                    <li class="detail_li"><% if (movie.genre) { %>
                        <p>GENERO: <a class="detail__hiper" href="/genres/detail/<%= movie.genre.id %>">
                                <%= movie.genre.name %>
                            </a></p>
                        <% } else { %>
                            <p>GENERO: Sin Espicificar</p>
                            <% } %></li>
                    <li class="detail_li"><p>ACTORES:
                        <% movie.actors.forEach(actor=> { %>
                            <ul>
                                <li><a class="detail__hiper" href="/actors/detail/<%= actor.id %>">
                                        <%= actor.first_name %>
                                            <%= actor.last_name %>
                                    </a></li>
                            </ul>
                            <% }) %>
                    </p></li>
                    <li class="detail_li"><p>ACCIONES:
                        <ul>
                            <li> <a class="detail__hiper" href="/movies/edit/<%= movie.id %>">EDITAR</a></li>
                            <li><a class="detail__hiper" href="/movies/delete/<%= movie.id %>">ELIMINAR</a></li>
                        </ul>
                    </p></li>
                </ul>
                  
                </div>
              </div>
            </div>
          </div>

            <%- include('./partials/footer.ejs') %>
                <%- include('./partials/scrips.ejs') %>

    </body>

</html>